<?xml version="1.0"?>

<launch>
   
  <!-- Start Gazebo with wg world running in (max) realtime -->
  <include file="$(find cvg_sim_gazebo)/launch/grid.launch"/>

  <!-- Spawn simulated quadrotor uav -->
  <group ns="drone0">
    <param name="tf_prefix" value="drone0"/>
    <include file="$(find cvg_sim_gazebo)/launch/spawn_quadrotor.launch" >
      <arg name="model" value="$(find cvg_sim_gazebo)/urdf/quadrotor_sensors0.urdf"/>
      <arg name="modelname" value="drone0"/>
      <arg name="spawncoords" value="-x 0 -y 1 -z 0.75"/>
    </include>
  </group>

  <group ns="drone1">
    <param name="tf_prefix" value="drone1"/>
    <include file="$(find cvg_sim_gazebo)/launch/spawn_quadrotor.launch" >
      <arg name="model" value="$(find cvg_sim_gazebo)/urdf/quadrotor_sensors1.urdf"/>
      <arg name="modelname" value="drone1"/>
      <arg name="spawncoords" value="-x 1 -y 0 -z 0.75"/>
    </include>
  </group>

</launch>
